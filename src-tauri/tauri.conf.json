{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "fourmat",
  "version": "0.1.0",
  "identifier": "aervxa.fourmat",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm generate"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "visible": false,
        "title": "4mat",
        "width": 1200,
        "height": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "minWidth": 384,
        "minHeight": 320
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": { "enable": true, "scope": ["**"] }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
